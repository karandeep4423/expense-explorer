{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"lib": [
			"es2015"
		],
		"paths": {
			"@shared/*": [
				"../shared/*"
			]
		},
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"test"
	]
}